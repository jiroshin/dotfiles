{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod"
			],
			"filetypes": [
				"go"
			]
		},
		"dockerfile": {
			"command": "docker-langserver",
			"filetypes": [
				"dockerfile"
			],
			"args": [
				"--stdio"
			]
		},
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			],
			"ignoredRootPaths": [
				"~"
			]
		}
	},
	"eslint.enable": true,
	"eslint.autoFixOnSave": true,
	"eslint.filetypes": ["javascript", "typescript", "typescriptreact", "javascriptreact", "typescript.tsx"]
}
